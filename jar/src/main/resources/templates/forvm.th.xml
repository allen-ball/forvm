<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<thlogic>
  <attr sel="body">
    <attr sel="/header" th:class="'fixed-top navbar navbar-dark'">
      <attr sel="/nav" th:class="'container navbar-expand-md'"/>
      <attr sel="nav/a[0]" th:class="'navbar-brand'"/>
      <attr sel="nav/ul" th:class="'navbar-nav'"/>
      <attr sel="nav/ul/li" th:class="'navbar-item dropdown'"/>
      <attr sel="nav/ul/li/a" th:class="'btn btn-link'"/>
      <attr sel="nav//ul/li/button"
            th:class="'btn dropdown-toggle'"
            th:id="${#ids.seq('dropdown')}"
            th:data-toggle="'dropdown'"
            th:aria-haspopup="true" th:aria-expanded="false"/>
      <attr sel="nav//ul/li/ul"
            th:class="'dropdown-menu'"
            th:aria-labelledby="${#ids.prev('dropdown')}"/>
      <attr sel="nav//ul/li/ul/li" th:class="'nav-item dropdown'"/>
      <attr sel="nav//ul/li/ul/li/a" th:class="'btn btn-link dropdown-item'"/>
    </attr>
    <attr sel="main" th:class="'container'">
      <attr sel="/div" th:class="'jumbotron'">
        <attr sel="/div" th:class="'text-center'"/>
      </attr>
      <attr sel="/table" th:class="'table table-striped'">
        <attr sel="/tbody">
          <attr sel="/tr" th:class="'row'"/>
          <attr sel="article-row">
            <attr sel="/td[0]" th:class="'col-sm'">
              <attr sel="/a" th:class="'row'"/>
            </attr>
          </attr>
          <attr sel="author-row">
            <attr sel="/td[0]" th:class="'col-sm-2 text-left'"/>
            <attr sel="/td[1]" th:class="'col-sm'"/>
          </attr>
        </attr>
      </attr>
    </attr>
    <attr sel="/footer" th:class="'fixed-bottom'">
      <attr sel="/nav" th:class="'container navbar navbar-dark'">
        <attr sel="/span[0]" th:class="'col-sm text-left'"/>
        <attr sel="/span[1]" th:class="'col-sm-3 text-center'"/>
        <attr sel="/span[2]" th:class="'col-sm text-right'"/>
      </attr>
      <attr sel="nav//a" th:class="'btn btn-link'"/>
    </attr>
  </attr>
</thlogic>
