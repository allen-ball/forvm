<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:aether="antlib:org.eclipse.aether.ant"
         xmlns:artifact="antlib:org.apache.maven.artifact.ant"
         xmlns:ball="antlib:ball.util.ant"
         xmlns:ivy="antlib:org.apache.ivy.ant"
         xmlns:spring-boot="antlib:org.springframework.boot.ant"
         name="forvm" basedir="." default="jar">

  <description>
    forvm
    ------------------------
    Blog Publishing Platform

    $Id$
  </description>

  <aether:resolve>
    <dependencies>
      <dependency coords="ball:parent:2.0:xml:compile"/>
    </dependencies>
    <properties/>
  </aether:resolve>
  <import file="${ball:parent:xml}"/>

  <target name="markdown-parse"
          description="--> Invokes &lt;markdown-parse/&gt; task."
          depends="jar-classes">
    <taskdef classpathref="build.classpath"
             resource="forvm/ant/defaults.properties"/>
    <markdown-parse classpathref="runtime.classpath"/>
  </target>

  <target name="markdown-render"
          description="--> Invokes &lt;markdown-render/&gt; task."
          depends="jar-classes">
    <taskdef classpathref="build.classpath"
             resource="forvm/ant/defaults.properties"/>
    <markdown-render classpathref="runtime.classpath"/>
  </target>

</project>
